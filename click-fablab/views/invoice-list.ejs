<%- include('includes/head.ejs') %>
<%- include('includes/navigation_logout.ejs') %>

<div class="my-uses">

    <h1>Factures</h1>
    <table>
        <thead>
            <th>Numéro</th>
            <th>Date génération facture</th>
            <th>Montant total</th>
            <th>Payé</th>
        </thead>
        <% for(var i=0; i < tabInvoice.length; i++) { %>
           <tr>
             <td><%= tabInvoice[i].name %></td>
             <td><%= tabInvoice[i].createdAt %></td>
             <td><%= tabInvoice[i].total_amount %></td>
             <td><% if(tabInvoice[i].paid === false){ %>
                Non
              <% } else{ %>  
                Oui
             <% } %></td>
           </tr>
        <% } %>
        </table>
        
    <a href="/api/user/user-panel"><button type="button" class="btn btn-secondary retour">Retour</button></a>
</div>
<%- include('includes//end.ejs') %>