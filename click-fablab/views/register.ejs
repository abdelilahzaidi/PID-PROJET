<%- include('includes/head.ejs') %>
    </head>

    <body>

        <%- include('includes/navigation.ejs') %>

            <div class="container container-fluid  ">
                <div class="card">
                    <div class="card-header">
                        <h4>Register Form</h4>
                    </div>

                    <div class="card-body">
                        <form action="/api/user" method="POST">
                            <div class="form-group">
                                <label for="first_name">First Name</label>
                                <input type="text" placeholder="Bernard" class="form-control" id="first_name" name="first_name" required>
                            </div>

                            <div class="form-group">
                                <label for="last_name">Last Name</label>
                                <input type="text" placeholder="Harris" class="form-control" id="last_name" name="last_name" required>
                            </div>


                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" placeholder="bernard.harris@mail.com" class="form-control" id="email" name="email" required>
                            </div>

                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" placeholder="doit contenir minimum 1 chiffre et 6 caractères" class="form-control" id="password" name="password" required>
                            </div>

                            <div class="form-group">
                                <label for="passwordConfirm">Confirm your Password</label>
                                <input type="password" placeholder="doit contenir minimum 1 chiffre et 6 caractères" class="form-control" id="passwordConfirm" name="passwordConfirmation" required>
                            </div>



                            <div class="btn-register">
                                <button type="submit" class="btn btn-primary mb-3">Create a new account</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>


            <%- include('includes/end.ejs') %>