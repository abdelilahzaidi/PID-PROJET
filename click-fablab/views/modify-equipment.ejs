<%- include('includes/head.ejs') %>
<div class="formulaire-equipement">
    <form method="POST" action="/api/equipment/modify-equipment">

        <div class="form-group row">
            <label class="col-4 col-form-label" for="Machine">Machine à modifier : </label>
            <div class="col-8">
                <select onchange="changePrice(this)" id="equipment" class="form-control">
        <option value=""></option>
      </select>
            </div>

        </div>
            <div class="form-group row">
                <label class="col-4 col-form-label" for="name">Nom de l'équipement : </label>
                <div class="col-8">
                    <input id="name" name="name" placeholder="Machine VX500A" type="text" class="form-control" required="required">
                </div>
            </div>
            <div class="form-group row">
                <label for="price" class="col-4 col-form-label">Prix par minutes en euros :</label>
                <div class="col-8">
                    <input id="price" name="price" placeholder="40" type="text" class="form-control" required="required">
                </div>
            </div>
           
            <div class="form-group row">
                <div class="offset-4 col-8">
                    <button type="submit" class="btn btn-primary id" name="id">Envoyer</button>
                </div>
            </div>

    </form>
    <a href="/api/user/admin"><button type="button" class="btn btn-secondary retour">Retour</button></a>
</div>
<script src="/js/equipment-list.js"></script>
    <%- include('includes/end.ejs') %>